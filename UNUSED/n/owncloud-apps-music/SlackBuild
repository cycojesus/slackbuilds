#!/bin/sh

CWD=$(pwd)

PRGNAM=$(basename $CWD)
VERSION=v0.1.7-beta
ARCH="noarch" 	# hardcode ARCH
BUILD=${BUILD:-1}
TAG=${TAG:-gwh}

DOCROOT=${DOCROOT:-/var/www/htdocs}

PHPUSER=${PHPUSER:-apache}
PHPGROUP=${PHPGROUP:-apache}

TMP=${TMP:-/tmp/$TAG}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -eu

FILENAME=$PRGNAM-$VERSION.tar.gz
APPNAM=${PRGNAM#owncloud-apps-}

rm -rf $PKG
mkdir -p $TMP $OUTPUT $PKG/$DOCROOT/owncloud/apps/
cd $PKG/$DOCROOT/owncloud/apps/

[ ! -e $CWD/$FILENAME ] && wget -c https://github.com/owncloud/music/releases/download/$VERSION/music.tar.gz -O $CWD/$FILENAME
tar xvf $CWD/$FILENAME

cd $APPNAM
#VERSION=$(cat appinfo/info.xml | grep -i version\> | sed 's|</\?version>||g' | tr -d \   | sed 's|\t||g' | tr - _ )

chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 -o -perm 755 \) \
 -exec chmod 750 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 -o -perm 644 \) \
 -exec chmod 640 {} \;

# mkdir -p $PKG/usr/doc/$PRGNAM
# cp -a AUTHORS COPYING README.rst $PKG/usr/doc/$PRGNAM

# Change ownership and perms
chown -R $PHPUSER:$PHPGROUP $PKG/$DOCROOT/owncloud
chmod 0750 $PKG/$DOCROOT/owncloud/apps/$APPNAM

mkdir -p $PKG/install
cat <<EOF > $PKG/install/slack-desc
$PRGNAM: $PRGNAM (music app for owncloud)
$PRGNAM:
$PRGNAM: 
$PRGNAM: 
$PRGNAM: 
$PRGNAM: 
$PRGNAM: 
$PRGNAM: 
$PRGNAM:
$PRGNAM: Built to ease developers pain and make testing possible
$PRGNAM:
EOF

cd $PKG
rm -f $PKG/{,usr/}lib$(uname -m | grep -o 64)/*.la
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$(echo $VERSION | tr - _)-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
